<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="EditAccountActivity">

    <Button
        android:id="@+id/submit_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:background="@color/colorPrimaryDark"
        android:text="submit"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/cancel_submit_bt"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="112dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="112dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="cancel"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/submit_bt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_bio_tv"
        app:layout_constraintVertical_bias="0.965" />

    <EditText
        android:id="@+id/edit_display_name_tv"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="display name"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/outline_account_circle_black_24"

        app:layout_constraintBottom_toTopOf="@+id/edit_games_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_games_tv"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/outline_videogame_asset_black_24"
        android:ems="10"
        android:hint="Edit favorite games here"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edit_bio_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_display_name_tv" />

    <EditText
        android:id="@+id/edit_bio_tv"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="133dp"
        android:layout_marginEnd="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/outline_description_black_24"
        android:ems="10"
        android:hint="edit bio here"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/submit_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_games_tv" />


</android.support.constraint.ConstraintLayout>