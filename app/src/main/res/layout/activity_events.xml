<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventActivity"
    tools:layout_editor_absoluteY="81dp">


    <ListView
        android:id="@+id/joinedLV"
        android:layout_width="420dp"
        android:layout_height="158dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/eventdetails"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="401dp"
        android:layout_height="65dp"
        android:background="#5690f2"
        android:gravity="center"
        android:text="title"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editB"
        android:layout_width="149dp"
        android:layout_height="52dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joinedLV" />

    <LinearLayout
        android:id="@+id/eventdetails"
        android:layout_width="423dp"
        android:layout_height="288dp"
        android:orientation="vertical"
        android:paddingRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTV"
        tools:layout_editor_absoluteX="-10dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rectangle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"
                android:text="Created By:"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/creatorTV"
                android:layout_width="352dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="15dp"
                android:text="creator"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deets"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="Description:"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/descTV"
                android:layout_width="352dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="description"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deets2"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="Game:"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/gameTV"
                android:layout_width="352dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:text="gameTV"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="269dp"
            android:layout_height="61dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deets3"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:text="Console:"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/consoleTV"
                android:layout_width="352dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:text="consoleTV"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="58dp">


            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="0dp"
                android:text="Date"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="352dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="45dp"
                android:text="time"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        </TableRow>

    </LinearLayout>

    <Button
        android:id="@+id/joinB"
        android:layout_width="149dp"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:text="Join Event"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/editB"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joinedLV" />
</android.support.constraint.ConstraintLayout>



