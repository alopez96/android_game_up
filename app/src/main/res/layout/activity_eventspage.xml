<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="404dp"
        android:layout_height="47dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="My Events"
        android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewOthers"
        android:layout_width="409dp"
        android:layout_height="205dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints"></ListView>

    <ListView
        android:id="@+id/listViewEvents"
        android:layout_width="409dp"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"></ListView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="404dp"
        android:layout_height="47dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="Events Joined"
        android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/listViewEvents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewOthers" />


</android.support.constraint.ConstraintLayout>